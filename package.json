{
  "name": "jsonresume-theme-react",
  "version": "0.0.3",
  "description": "A React-based theme for JSON Resume",
  "type": "module",
  "main": "index.cjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev:base": "vite",
    "dev": "npm run generate-types && node scripts/dev.js",
    "build": "npm run generate-types && tsc -b && vite build",
    "build:ci": "npm run build && node scripts/render.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "render:resumed": "npm run build && node scripts/render.js",
    "generate-types": "node scripts/generateTypes.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "start": "resumed --theme jsonresume-theme-local",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "jsonresume",
    "jsonresume-theme",
    "resume",
    "cv",
    "react",
    "theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/phoinixi/jsonresume-theme-react.git"
  },
  "author": "Francesco Esposito",
  "license": "MIT",
  "dependencies": {
    "@jsonresume/schema": "1.2.1",
    "clsx": "2.1.1",
    "date-fns": "^4.1.0",
    "i18next": "^24.2.3",
    "jsonresume-theme-local": "file:./",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^15.4.1",
    "react-icons": "5.5.0",
    "react-markdown": "10.1.0",
    "remark-gfm": "4.0.1",
    "tailwind-merge": "3.0.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.25.9",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@eslint/js": "^9.21.0",
    "@iconify/react": "^5.2.0",
    "@iconify/tailwind": "^1.2.0",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/i18next": "^12.1.0",
    "@types/node": "^22.13.13",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-i18next": "^7.8.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "jsdom": "^26.0.0",
    "json-schema-to-typescript": "^15.0.4",
    "minimist": "^1.2.8",
    "postcss": "^8.5.3",
    "postcss-nesting": "^13.0.1",
    "prettier": "^3.5.3",
    "resumed": "4.1.0",
    "semantic-release": "^24.1.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.39.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-compression2": "^1.3.3",
    "vitest": "^3.1.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "module": "dist/index.js",
  "files": [
    "dist",
    "index.cjs"
  ],
  "comment": "The files array ensures only the necessary files are included when publishing to npm"
}
